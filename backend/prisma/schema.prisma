// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Define an Enum for the type. This ensures
// data can only be 'MOVIE' or 'TV_SHOW'.
enum EntryType {
  MOVIE
  TV_SHOW
}

// Renamed from 'Movie' to 'Entry'
model Entry {
  id        Int       @id @default(autoincrement())

  type      EntryType
  
  title     String
  director  String?
  budget    Decimal?  @db.Decimal(15, 2)
  location  String?
  duration  Int?
  year      Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}